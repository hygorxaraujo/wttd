[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]
coverage = "*"

[packages]
django = "*"
gunicorn = "*"
psycopg2-binary = "*"
whitenoise = "*"

[requires]
python_version = "3.8"

[scripts]
up = "docker-compose up --build -d"
down = "docker-compose down -v"
tests = "docker-compose run --rm web python manage.py test"
coverage = "docker-compose run --rm web sh -c \"coverage run --source='.' manage.py test && coverage report\""

